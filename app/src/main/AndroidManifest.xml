<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projemanag">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Progemanage">
        <activity
            android:name="com.example.projemanag.IntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyTheme"
            ></activity>
        <activity
            android:name="com.example.projemanag.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.projemanag.MainActivity"></activity>
    </application>

</manifest>